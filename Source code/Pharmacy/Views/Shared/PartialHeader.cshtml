<div class="site-navbar py-2">
    <div class="search-wrap">
        <div class="container">
            <a href="#" class="search-close js-search-close"><span class="icon-close2"></span></a>
            <form action="/Home/TimKiem" method="post">
                <input type="text" name="searchstr" class="form-control" placeholder="Tìm thuốc, dược phẩm,...">
            </form>
        </div>
    </div>
    <div class="container">
        <div class="d-flex align-items-center justify-content-between">
            <div class="logo">
                <div class="site-logo">
                    <a href="/Home/Index" class="js-logo-clone">PHARMACY</a>
                </div>
            </div>
            <div class="main-nav d-none d-lg-block">
                <nav class="site-navigation text-right text-md-center" role="navigation">
                    <ul class="site-menu js-clone-nav d-none d-lg-block">
                        <li class="active"><a href="/Home/Index">TRANG CHỦ</a></li>
                        @Html.Action("Menu")
                    </ul>
                </nav>
            </div>
            <div class="icons">
                <a href="#" data-toggle="tooltip" data-placement="bottom" title="Tìm kiếm" class="icons-btn d-inline-block js-search-open"><span class="icon-search"></span></a>
                <a href="/Home/Cart" data-toggle="tooltip" data-placement="bottom" title="Giỏ hàng" class="icons-btn d-inline-block bag">
                    <span class="icon-shopping-bag"></span>
                </a>
                <style>
                    .dropdown1 {
                        position: relative;
                        display: inline-block;
                    }

                    .dropdown-content {
                        display: none;
                        position: absolute;
                        background-color: #f9f9f9;
                        min-width: 160px;
                        box-shadow: 0px 8px 16px 0px rgba(0,0,0,0.2);
                        z-index: 1;
                    }

                    .dropdown-content a {
                        color: black;
                        padding: 12px 16px;
                        text-decoration: none;
                        display: block;
                    }

                    .dropdown1:hover .dropdown-content {
                        display: block;
                    }
                </style>
                <div class="dropdown1">

                    @Html.Action("DuyTriDangNhap", "Home")               
                    @{
                        var session = (UserLogin)Session[Pharmacy.Common.CommonConstants.USER_SESSION];
                    }
                    @if (session == null)
                    {
                        <a href="#" data-toggle="tooltip" data-placement="bottom" title="Đăng nhập/Đăng ký" class="icons-btn d-inline-block bag">
                            <span class="icon-user-circle-o"></span>
                        </a>
                        <div class="dropdown-content">
                            <a href="/Home/Login">Đăng nhập</a>
                            <a href="/Home/Register">Đăng ký</a>
                        </div>
                    }
                    else
                    {
                        <a href="#" data-toggle="tooltip" data-placement="bottom" title="" class="icons-btn d-inline-block bag">
                            <span class="icon-user-circle-o"></span>
                        </a>
                        <div class="dropdown-content">
                            <a>@session.userName</a>
                            @Html.ActionLink("Đăng xuất", "Logout")
                        </div>
                    }
                </div>
                <a href="#" class="site-menu-toggle js-menu-toggle ml-3 d-inline-block d-lg-none">
                    <span class="icon-menu"></span>
                </a>
            </div>        
        </div>
    </div>
</div>
